{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "lib": ["es5", "es6", "dom", "dom.iterable"],
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@/sunnus/*": ["./*"],
      "@/components/*": ["./src/components/*"],
      "@/data/*": ["./src/data/*"],
      "@/types/*": ["./src/types/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/screens/*": ["./src/screens/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/contexts/*": ["./src/contexts/*"]
    }
  },
  "include": ["./src/**/*", "./"],
  "exclude": ["node_modules"],
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  }
}
